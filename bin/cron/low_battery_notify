#!/bin/bash
# Sends a notification using notify-send when the battery percentage is below
# MIN_LEVEL
export DISPLAY=:0
export XAUTHORITY=$HOME/.Xauthority
export XDG_RUNTIME_DIR=/run/user/$(id -u)
export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/$(id -u)/bus

MIN_LEVEL=10
HALF_LEVEL_UPPER=50
HALF_LEVEL_LOWER=45

bat_notify() {
  /usr/bin/notify-send --urgency="$2" "$1" \
    "Battery level is at ${battery_level}%."
}

battery_level=$(acpi -b | grep -P -o '[0-9]+(?=%)')
echo "Battery at ${battery_level}%"

if [ $battery_level -le $MIN_LEVEL ]; then
  bat_notify "Battery Low" "critical"
elif [[ $battery_level -lt $HALF_LEVEL_UPPER ]] && \
      [[ $battery_level -gt $HALF_LEVEL_LOWER ]]; then
  bat_notify "Battery At Half" "normal"
fi

#!/bin/sh

B='#00000000'  # blank
C='#ffffff22'  # clear ish
D='#ff00ffcc'  # default
T='#ee00eeee'  # text
W='#880000bb'  # wrong
V='#bb00bbbb'  # verifying

sleep 1
i3lock \
--insidevercolor=$C         \
--ringvercolor=$V           \
\
--insidewrongcolor=$C       \
--ringwrongcolor=$W         \
\
--insidecolor=$B            \
--ringcolor=$D              \
--linecolor=$B              \
--separatorcolor=$D         \
\
--verifcolor=$T             \
--wrongcolor=$T             \
--timecolor=$T              \
--datecolor=$T              \
--layoutcolor=$T            \
--keyhlcolor=$W             \
--bshlcolor=$W              \
\
--screen 1                  \
--blur 10                   \
--clock                     \
--indicator                 \
--timestr="%H:%M:%S"        \
--datestr="%A, %Y-%m-%d"    \
\
--veriftext="verifying"     \

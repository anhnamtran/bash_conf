#!/bin/bash
# If i3lock isn't installed bail.
type i3lock 2>&1 >/dev/null || return 1

# List of window titles REGEX to prevent locking from happening
EXCLUDED_WIN=(
  "Meet.*Firefox"
  "Zoom Meeting ID:.*"
)

WINDOWS=$(xwininfo -tree -root)
for win in ${EXCLUDED_WIN[@]}; do
  if grep -q "$win" -- <<<"$WINDOWS"; then
    exit 0
  fi
done

B='#00000000'  # blank
C='#ffffff22'  # clear ish
D='#ff00ffcc'  # default
T='#ff00ffcc'  # text
W='#880000bb'  # wrong
V='#bb00bbbb'  # verifying


i3lock \
--color='000000'                                                      \
--insidevercolor=$B                                                   \
--ringvercolor=$V                                                     \
\
--insidewrongcolor=$C                                                 \
--ringwrongcolor=$W                                                   \
\
--insidecolor=$B                                                      \
--ringcolor=$D                                                        \
--linecolor=$B                                                        \
--separatorcolor=$D                                                   \
\
--verifcolor=$T                                                       \
--wrongcolor=$T                                                       \
--timecolor=$T                                                        \
--datecolor=$T                                                        \
--layoutcolor=$T                                                      \
--keyhlcolor=$W                                                       \
--bshlcolor=$W                                                        \
\
--ring-width "3.0"                                                    \
\
--clock                                                               \
--indicator                                                           \
--timestr="%H:%M:%S"                                                  \
--datestr="%a, %Y-%m-%d"                                              \
\
--veriftext="Verifying"                                               \
--noinputtext="No Input"                                              \
--wrongtext="Incorrect"                                               \

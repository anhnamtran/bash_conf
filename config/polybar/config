[neon_colors]
background          = #282C34

bright_purple       = #8826a5

dark_purple         = #470059
dark_blue           = #162025

yellow              = #e5c07b
purple              = #73208c
red                 = #bA2922

[bar/mainbar]
monitor = ${env:MONITOR:}

width = 100%
height = 35
radius = 0
fixed-center = true

background = ${neon_colors.background}
foreground = #bfbfbf

line-size = 1
line-color =

border-size = 0
border-color =

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "Source Code Pro Semibold:size=15;1"
font-1 = "Material Design Icons:size=15;1"
font-2 = "Material Design Icons:size=15;1"

modules-left = i3 wintitle
modules-center = date
modules-right = backlight pulseaudio battery

tray-position = ${env:TRAY_POS:}
tray-maxsize = 40
tray-padding = 0
tray-offset-y =

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${neon_colors.dark_blue}
label-mode-background = ${neon_colors.dark_purple}

label-focused = %index%
label-focused-background = ${neon_colors.purple}
label-focused-foreground = ${neon_colors.yellow}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-background = ${neon_colors.dark_purple}
label-unfocused-foreground = ${neon_colors.dark_blue}
label-unfocused-padding = 2

label-visible = %index%
label-visible-background = ${neon_colors.purple}
label-visible-foreground = ${neon_colors.dark_blue}
label-visible-padding = 2

label-urgent = %index%
label-urgent-background = ${neon_colors.red}
label-urgent-padding = 2

[module/wintitle]
type = internal/xwindow

format = <label>
format-foreground = ${neon_colors.bright_purple}
format-padding = 1

label = %title%
label-maxlen = 30

label-empty =

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-foreground = ${neon_colors.bright_purple}
label-connected = %essid%
label-connected-maxlen = 15

format-disconnected = 
format-disconnected-foreground = ${neon_colors.bright_purple}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

[module/date]
type = internal/date
interval = 1

date = "%a, %Y-%m-%d"
date-alt =

time = %H:%M:%S
time-alt = %H:%M

format-foreground = ${neon_colors.dark_blue}
format-background = ${neon_colors.purple}
format-padding = 2

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_12_00.3.analog-stereo
use-ui-max = true

interval = 2

format-volume = vol:<label-volume>
format-volume-foreground = ${neon_colors.bright_purple}
format-muted = vol:muted

label-volume = %percentage%%

format-muted-foreground = ${neon_colors.bright_purple}

[module/backlight]
type = internal/backlight

card = intel_backlight

format = backlight:<label>
format-foreground = ${neon_colors.bright_purple}

label = %percentage%%
label-foreground =  ${neon_colors.bright_purple}

[module/battery]
type = internal/battery

full-at = 100

battery = BAT0
adapter = ADP1

poll-interval = 5

format-charging = batt(^):<label-charging>
format-charging-foreground = ${neon_colors.bright_purple}

format-discharging = batt(v):<label-discharging>
format-discharging-foreground = ${neon_colors.bright_purple}

format-full = batt(o):<label-full>
format-full-foreground = ${neon_colors.bright_purple}

label-charging = %percentage%%

label-discharging = %percentage%%

label-full = %percentage%%

[module/keyboard]
type = internal/xkeyboard

blacklist-0 = num lock
blacklist-1 = scroll lock

format = <label-layout>

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

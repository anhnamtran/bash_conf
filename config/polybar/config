[neon_colors]
background          = #282C34

bright_purple       = #8826a5

dark_purple         = #470059
dark_blue           = #162025

yellow              = #e5c07b
purple              = #73208c
red                 = #bA2922

[bar/mainbar]
monitor = ${env:MONITOR:}

width = 100%
height = 50
radius = 0
fixed-center = true

background = ${neon_colors.background}
foreground = #bfbfbf

line-size = 1
line-color =

border-size = 0
border-color =


ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

[module/date]
type = internal/date
interval = 1

date = " %Y-%m-%d"
date-alt =

time = %H:%M:%S
time-alt = %H:%M

format-prefix = 肋
format-foreground = ${neon_colors.dark_blue}
format-background = ${neon_colors.purple}
format-padding = 2

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_12_00.3.analog-stereo

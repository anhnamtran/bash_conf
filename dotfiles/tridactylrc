set newtab about:blank
set smoothscroll true
set theme dark
set hintfiltermode vimperator-reflow
set hintnames numeric
set incsearch true
set allowautofocus true
set wordpattern [^\s\/]+

command ignore mode ignore
bind --mode=ignore <C-Enter> mode normal
bind i mode ignore

bind j scrollline 5
bind k scrollline -5
bind L tabnext
bind H tabprev
bind yt tabduplicate
bind ;t tabdetach
bind ;T composite tabduplicate; tabdetach

bind n !s xdotool key 'alt+g'
bind N !s xdotool key 'alt+g'

bind <C-]> forward
bind <C-[> back

unbind --mode=normal <C-b>
bind --mode=browser <C-b> tab #

bind --mode=ex <C-w> text.backward_kill_word
bind --mode=input <C-w> text.backward_kill_word
bind --mode=insert <C-w> text.backward_kill_word

unbind <Space>

alias tg tabgrab

set hintmaps.<Tab> hint.focusNextHint
set hintmaps.<S-Tab> hint.focusPreviousHint

command tabc tabclose

# Arista domains
set searchurls.go http://go/%s
set searchurls.pb http://pb/%s
set searchurls.aid http://aid/%s
set searchurls.dashboard http://dashboard/%s
set searchurls.bug http://bug/%s
set searchurls.bb http://bb/%s
set searchurls.cl http://cl/%s
set searchurls.review http://reviewboard/%s
set searchurls.aboard http://aboard/react/user/andrew_nt/%s
set searchurls.src http://src/%s
set searchurls.grok http://opengrok/source/search?project=eos-trunk&full=%s
